<div class="span8 offset2">
  <div class="page-header">
    <h3>API</h3>
  </div>
  <h4>Access</h4>
  <div class="control-group">
    <label class="control-label" for="token">Token</label>
    <div class="controls">
      <pre class="">?token=<%= @user.apikey.access_token %></pre>
    </div>
  </div>
  <div class="row-fluid">
    <h4>Usage</h4>
    <div class="well well-small">
      Current: <b><%= @current_usage %></b> - Max: <b><%= @max_usage %></b>
    </div>

    <div class="progress">
      <div class="bar" style="width: <%= number_to_percentage(@current_usage / @max_usage * 100, :precision => 1) %>;"></div>
    </div>
  </div>
</div>
